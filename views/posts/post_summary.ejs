<!-- Contains html for rendering a post summary -->
<!-- Add and format blog content here -->
<div class="card">
	<div class="card-body">
		<h3 class="card-title">
			<a href="/blog/<%= post['slug']%>">
				<%- post['title'] %></a>
		</h3>
		<div>
			<%- post['summary'] %>
		</div>
		<br>
		<% if (locals.email) { %>
		<div>
			<a href="/blog/edit/<%= post['slug'] %>" class="btn btn-outline-primary btn-sm">Edit</a>
			<form action="/blog/delete/<%= post['slug'] %>" method="POST" style="display: inline;">
				<input type="hidden" name="_method" value="DELETE" />
				<button class="btn btn-outline-danger btn-sm" type="submit">Delete</button>
			</form>
		</div>
	  <% } %>
	</div>
</div>
