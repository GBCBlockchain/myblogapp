
<% if (message != "") { %>
	<div class="alert alert-danger">
		<h3>error: <%= message %></h3>
	</div>
<% } %>
<% if (locals.edit) { %>
	<form action="/blog/edit/<%= post['slug'] %>" method="post">
	<!-- Hidden Field detected in express server to allow access to either PUT or Delete Routes - see method-ovveride in app.js -->
		<input type="hidden" name="_method" value="PUT">
<% } else { %>
<form action="/blog" method="post">
<% } %>
	<div class="form-group row">
		<label for="title" class="col-4 col-form-label">Title</label>
		<div class="col-8">
<input id="title" value="<%- post['title'] || "" %>" name="title" placeholder="Title of your article .." type="text"
 required="required" class="form-control here">
		</div>
	</div>
	<div class="form-group row">
		<label for="content" class="col-4 col-form-label">Blog Content</label>
		<div class="col-8">
<textarea id="content" name="content" cols="40" rows="8" class="form-control"><%- post['content'] || "" %></textarea>
		</div>
	</div>
	<div class="form-group row">
		<div class="offset-4 col-8">
			<button name="submit" type="submit" class="btn btn-primary">Submit</button>
		</div>
	</div>
</form>


<%- contentFor('title') %>
<%= title %>